<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree View -->
    <record id="view_inventory_tree" model="ir.ui.view">
        <field name="name">finale.inventory.tree</field>
        <field name="model">finale.inventory</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id"/>
                <field name="warehouse"/>
                <field name="location"/>
                <field name="quantity"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_inventory_form" model="ir.ui.view">
        <field name="name">finale.inventory.form</field>
        <field name="model">finale.inventory</field>
        <field name="arch" type="xml">
            <form string="Inventory">
                <group>
                    <field name="product_id"/>
                    <field name="warehouse"/>
                    <field name="location"/>
                    <field name="quantity"/>
                </group>
            </form>
        </field>
    </record>
    <record id="view_inventory_search" model="ir.ui.view">
    <field name="name">finale.inventory.search</field>
    <field name="model">finale.inventory</field>
    <field name="arch" type="xml">
        <search string="Inventory Search">
            <field name="product_id"/>
            <field name="warehouse"/>
            <field name="location"/>
            <field name="quantity"/>
            <group expand="0" string="Group By">
                <filter name="group_by_product" string="Product" context="{'group_by': 'product_id'}"/>
                <filter name="group_by_warehouse" string="Warehouse" context="{'group_by': 'warehouse'}"/>
                <filter name="group_by_location" string="Location" context="{'group_by': 'location'}"/>
            </group>
            <searchpanel>
                <field name="warehouse" icon="fa-home" select="multi" enable_counter="1"/>
            </searchpanel>
        </search>
    </field>
</record>


    <!-- Action -->
    <record id="action_inventory" model="ir.actions.act_window">
        <field name="name">Inventory</field>
        <field name="res_model">finale.inventory</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->

       <menuitem id="menu_finale_inventory"
              name="Inventory"
              parent="menu_finale_root"
              action="action_inventory"
              sequence="20"/>
              

    </data>
</odoo>
